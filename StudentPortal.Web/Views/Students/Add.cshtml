@model StudentPortal.Web.Models.AddStudentViewModel

@{
    ViewBag.Title = "Create New Student";
    Layout = "_Layout";
}

<h2>Create New Student</h2>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="John Doe" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" name="email" id="email" placeholder="johndoe@example.com" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input class="form-control" type="text" name="phone" id="phone" placeholder="082254789901" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <input class="form-check-input" type="checkbox" name="subscribed" id="subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="subscribed">Subscribed</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>