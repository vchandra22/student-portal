@{
    ViewBag.Title = "Edit Data Student";
    Layout = "_Layout";
}

@model StudentPortal.Web.Models.Entity.Student

<h2>Edit Data Student</h2>

@if (Model is null)
{
    <p>No student was found with this Id</p>
} else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input class="form-control" type="text" name="id" id="id" asp-for="Id" readonly />
        </div>
    
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" name="name" id="name" asp-for="Name"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" name="email" id="email" asp-for="Email"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input class="form-control" type="text" name="phone" id="phone" asp-for="Phone"/>
        </div>

        <div class="mt-3">
            <input class="form-check-input" type="checkbox" name="subscribed" id="subscribed" asp-for="Subscribed"/>
            <label class="form-check-label" for="subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}